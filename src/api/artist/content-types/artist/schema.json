    },
    "introduction": {
      "type": "text"
    },
    "passphrase": {
      "type": "string",
      "private": true,
      "required": true
    },
    "artworks": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::artwork.artwork",
      "mappedBy": "artist"
    }
  }
